{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"jsx": "react",
		"esModuleInterop": true,
		"lib": ["DOM", "ESNext"],
		"types": ["react", "react-dom"],
		"strict": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"sourceMap": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
